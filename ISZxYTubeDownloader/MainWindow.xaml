<Window x:Class="ISZxYTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISZx YTube Downloader" Height="650" Width="950"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="ISZx YouTube Downloader" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2196F3" Margin="0,0,0,20"/>

        <!-- URL Input Section -->
        <GroupBox Grid.Row="1" Header="YouTube Links" Margin="0,0,0,10">
            <StackPanel>
                <TextBox x:Name="txtUrl" Height="30" 
                         Margin="0,5,0,5"
                         VerticalContentAlignment="Center"
                         Text="https://www.youtube.com/watch?v="/>
                <Button x:Name="btnAddUrl" Content="Add to Queue" 
                        Height="35" Width="120"
                        HorizontalAlignment="Left"
                        Click="BtnAddUrl_Click"
                        Background="#4CAF50" Foreground="White"
                        Margin="0,5,0,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Download Format Selection -->
        <GroupBox Grid.Row="2" Header="Download Format  Quality" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Format:" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="cmbFormat" Grid.Column="1" 
                          Height="30" Margin="0,5"
                          SelectionChanged="CmbFormat_SelectionChanged">
                    <ComboBoxItem Content="Video + Audio (MP4)" IsSelected="True" Tag="muxed"/>
                    <ComboBoxItem Content="Video Only (MP4)" Tag="video"/>
                    <ComboBoxItem Content="Audio Only (MP3)" Tag="audio"/>
                </ComboBox>

                <TextBlock Grid.Column="2" Text="Quality:" 
                           VerticalAlignment="Center" Margin="20,0,10,0"/>
                <ComboBox x:Name="cmbQuality" Grid.Column="3" 
                          Height="30" Margin="0,5">
                    <ComboBoxItem Content="Best Quality" IsSelected="True" Tag="best"/>
                    <ComboBoxItem Content="1080p (Full HD)" Tag="1080"/>
                    <ComboBoxItem Content="720p (HD)" Tag="720"/>
                    <ComboBoxItem Content="480p (SD)" Tag="480"/>
                    <ComboBoxItem Content="360p (Low)" Tag="360"/>
                    <ComboBoxItem Content="Smallest Size" Tag="lowest"/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <!-- Output Location -->
        <GroupBox Grid.Row="3" Header="Output Location" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtOutputPath" Height="30" 
                         VerticalContentAlignment="Center"
                         IsReadOnly="True" Margin="0,5,5,5"/>
                <Button Grid.Column="1" Content="Browse..." 
                        Height="30" Width="100"
                        Click="BtnBrowse_Click"
                        Margin="0,5,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Download Queue -->
        <GroupBox Grid.Row="4" Header="Download Queue" Margin="0,0,0,10">
            <ListBox x:Name="lstQueue" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="0,2" Padding="10" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Url}" 
                                           FontWeight="Bold" TextTrimming="CharacterEllipsis"/>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                                    <TextBlock>
                                        <Run Text="Status: "/>
                                        <Run Text="{Binding Status}" FontWeight="Bold" 
                                             Foreground="{Binding StatusColor}"/>
                                    </TextBlock>
                                    <TextBlock Text=" | " Margin="10,0"/>
                                    <TextBlock Text="{Binding FormatInfo}" 
                                               FontStyle="Italic" Foreground="#666"/>
                                </StackPanel>

                                <TextBlock Grid.Row="2" Text="{Binding ProgressText}" 
                                           Margin="0,0,0,5"/>

                                <ProgressBar Grid.Row="3" Height="20" 
                                             Value="{Binding Progress}" 
                                             Maximum="100"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Overall Progress -->
        <GroupBox Grid.Row="5" Header="Overall Progress" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="txtOverallProgress" 
                           Text="0 of 0 completed" 
                           Margin="0,5,0,5"/>
                <ProgressBar x:Name="progressOverall" 
                             Height="25" 
                             Maximum="100"/>
            </StackPanel>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="btnStart" Content="Start Download" 
                    Width="120" Height="40" Margin="5"
                    Click="BtnStart_Click"
                    Background="#2196F3" Foreground="White"/>
            <Button x:Name="btnPause" Content="Pause" 
                    Width="120" Height="40" Margin="5"
                    Click="BtnPause_Click"
                    Background="#FF9800" Foreground="White"
                    IsEnabled="False"/>
            <Button x:Name="btnCancel" Content="Cancel" 
                    Width="120" Height="40" Margin="5"
                    Click="BtnCancel_Click"
                    Background="#F44336" Foreground="White"
                    IsEnabled="False"/>
            <Button x:Name="btnClearQueue" Content="Clear Queue" 
                    Width="120" Height="40" Margin="5"
                    Click="BtnClearQueue_Click"/>
        </StackPanel>
    </Grid>
</Window>