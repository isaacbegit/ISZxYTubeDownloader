<Window x:Class="ISZxYTubeDownloader.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - ISZx YTube Downloader" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Application Settings" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="#2196F3" Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Download Settings -->
                <GroupBox Header="Download Settings" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="chkAutoStart" Content="Auto-start downloads when adding URLs"
                                  Margin="0,5"/>
                        <CheckBox x:Name="chkConfirmCancel" Content="Confirm before canceling downloads"
                                  IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="chkOverwriteFiles" Content="Overwrite existing files"
                                  Margin="0,5"/>

                        <Separator Margin="0,10"/>

                        <TextBlock Text="Maximum Retry Attempts:" Margin="0,5,0,2"/>
                        <ComboBox x:Name="cmbRetryAttempts" SelectedIndex="2" Margin="0,0,0,10">
                            <ComboBoxItem Content="0 (No retry)"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- Default Format Settings -->
                <GroupBox Header="Default Format  Quality" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Default Format:" Margin="0,5,0,2"/>
                        <ComboBox x:Name="cmbDefaultFormat" SelectedIndex="0" Margin="0,0,0,10">
                            <ComboBoxItem Content="Video + Audio (MP4)"/>
                            <ComboBoxItem Content="Video Only (MP4)"/>
                            <ComboBoxItem Content="Audio Only (MP3)"/>
                        </ComboBox>

                        <TextBlock Text="Default Quality:" Margin="0,5,0,2"/>
                        <ComboBox x:Name="cmbDefaultQuality" SelectedIndex="0" Margin="0,0,0,10">
                            <ComboBoxItem Content="Best Quality"/>
                            <ComboBoxItem Content="1080p (Full HD)"/>
                            <ComboBoxItem Content="720p (HD)"/>
                            <ComboBoxItem Content="480p (SD)"/>
                            <ComboBoxItem Content="360p (Low)"/>
                            <ComboBoxItem Content="Smallest Size"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- UI Settings -->
                <GroupBox Header="User Interface" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="chkShowNotifications" Content="Show completion notifications"
                                  IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="chkMinimizeToTray" Content="Minimize to system tray"
                                  Margin="0,5"/>
                        <CheckBox x:Name="chkSoundOnComplete" Content="Play sound when downloads complete"
                                  Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Advanced Settings -->
                <GroupBox Header="Advanced" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="chkEnableLogging" Content="Enable debug logging"
                                  Margin="0,5"/>
                        <CheckBox x:Name="chkCheckUpdates" Content="Check for updates on startup"
                                  IsChecked="True" Margin="0,5"/>

                        <Button Content="Clear Download History" 
                                Height="30" Margin="0,10,0,0"
                                Click="BtnClearHistory_Click"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="100" Height="35" 
                    Margin="0,0,10,0"
                    Click="BtnSave_Click"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Width="100" Height="35"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>